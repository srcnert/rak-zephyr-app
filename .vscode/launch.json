{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug ARM",
            "type": "cortex-debug",
            "request": "launch",
            "executable": "${input:assign_project}",
            "armToolchainPath": "${config:ZEPHYR_SDK_INSTALL_DIR}/arm-zephyr-eabi/bin",
            "toolchainPrefix": "arm-zephyr-eabi",
            "servertype": "jlink",
            "windows":{
                "serverpath": "${config:JLINK_PATH}/JLinkGDBServerCL.exe",
            },
            "osx":{
                "serverpath": "${config:JLINK_PATH}/JLinkGDBServerCLExe",
            },
            "interface": "swd",
            "device": "${input:mcu_select}",
            "showDevDebugOutput": "raw",
            "runToEntryPoint": "main",
            "serialNumber": "",
            "svdFile": "",
            "rtos": "Zephyr",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console",
                        "timestamp": false
                    }
                ]
            }
        },
        {
            "name": "Cortex Debug XTENSA",
            "type": "cortex-debug",
            "request": "attach", // no flash write attempt
            "executable": "${input:assign_project}",
            "gdbPath": "${config:ZEPHYR_SDK_INSTALL_DIR}/xtensa-espressif_esp32s3_zephyr-elf/bin/xtensa-espressif_esp32s3_zephyr-elf-gdb",
            "servertype": "openocd",
            "windows":{
                "serverpath": "${config:OPENOCD_PATH}/openocd.exe",
            },
            "osx":{
                "serverpath": "${config:OPENOCD_PATH}/openocd",
            },
            "interface": "jtag",
            "configFiles": [
                "${workspaceFolder}/boards/rakwireless/rak3112/doc/support/openocd.cfg"
            ],
            "overrideAttachCommands": [
                "set remote hardware-watchpoint-limit 2",
                "mon reset halt",
                "maintenance flush register-cache",
                "thb main",
                "c"
            ],
            "overrideRestartCommands": [
                "mon reset halt",
                "maintenance flush register-cache",
            ],
            "postDebugTask": "reset-rak3112",
            "preResetCommands": ["mon reset"],
            "postResetCommands": ["mon reset resume"],
            "showDevDebugOutput": "both",
            "runToEntryPoint": "main",
            "serialNumber": "",
            "svdFile": "",
            "rtos": "auto"
        }
    ],
    "inputs": [
        {
            "id": "mcu_select",
            "type": "pickString",
            "description": "Select the MCU will be debug:",
            "options": ["STM32WLE5CC", "NRF52840_XXAA", "AMA3B1KK-KBR"]
        },
        {
            "id": "assign_project",
            "type": "pickString",
            "description": "Select the project:",
            "options": ["app/hello_world/build/zephyr/zephyr.elf",
                        "app/basic/adc/build/zephyr/zephyr.elf",
                        "app/basic/blinky/build/zephyr/zephyr.elf",
                        "app/basic/dfu/build/zephyr/zephyr.elf",
                        "app/basic/uart_sleep/build/zephyr/zephyr.elf",
                        "app/lora/lora_shell/build/zephyr/zephyr.elf",
                        "app/lora/lorawan_otaa/build/zephyr/zephyr.elf",
                        "app/lora/sleep_test/build/zephyr/zephyr.elf",
                        "app/modem/cellular/build/zephyr/zephyr.elf",
                        "app/modem/sleep_test/build/zephyr/zephyr.elf",
                        "app/sensor/rak1901/build/zephyr/zephyr.elf",
                        "app/sensor/rak1904/build/zephyr/zephyr.elf",
                    ]
        }
    ]
}
